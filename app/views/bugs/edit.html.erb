

<h1>Add bug</h1>
<%= form_for @bug, url: {action: 'create'},:html => {:multipart => true} do |f| %>
 
 <div class="form-group row">
	   <%= f.label "Title", class: "col-sm-2 col-form-label col-form-label-sm" %>
	   <div class="col-sm-10">
	   <%= f.text_field :title, autocomplete: 'off', class: "col-sm-2 col-form-label" %>
	  </div>
 </div> 

 <div class="form-group row">
	   <%= f.label "Deadline", class: "col-sm-2 col-form-label col-form-label-sm" %>
	   <div class="col-sm-10">
	     <%= f.date_field :deadline, autocomplete: 'off',class: "col-sm-2 col-form-label" %>
       </div>	    
  </div>   
  <div class="form-group row">   
		   <%= f.label "Screenshot", class: "col-sm-2 col-form-label col-form-label-sm" %>
		    <div class="col-sm-10">
		    <%= f.file_field :screenshot, autocomplete: 'off',class: "col-sm-2 col-form-label" %><br>
            </div>
  </div>

  <div class="form-group row">  
		   <%= f.label "type" , class: "col-sm-2 col-form-label col-form-label-sm"%>
		   <div class="col-sm-10"> 
		     
    <%= f.select(:bug_type, Bug::TYPE , {} ,class: "col-sm-2 col-form-label") %>
		   </div>
   </div>	
   
   <div class="form-group row">   	   
		   <%= f.label "status", class: "col-sm-2 col-form-label col-form-label-sm" %>
		   <div class="col-sm-10">
		      
		     
    <%= f.select(:status, Bug::BUG_STATUS , {} ,class: "col-sm-2 col-form-label") %>
           </div>
    </div>       

    <%= f.submit %>
 <% end %>
